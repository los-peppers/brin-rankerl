%% Compiler options
{erl_opts, [
  {i, "include"},
  %%no_debug_info,
  debug_info,
  warn_export_vars,
  warn_shadow_vars,
  warn_obsolete_guard,
  warn_export_all,
  warn_missing_spec,
  warn_untyped_record
]}.
{deps, []}.
%% EDoc options
{edoc_opts,[{private,true}]}.
%% Dialyzer options
{dialyzer_opts, [
  {warnings, [
    no_return,
    no_unused,
    no_improper_lists,
    no_fun_app,
    no_match,
    no_opaque,
    no_fail_call,
    error_handling,
    race_conditions,
    behaviours,
    unmatched_returns
  ]}
]}.
